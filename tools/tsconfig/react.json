{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./base.json",
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "bundler",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2022"
        ],
        "types": [
            "react",
            "react-dom"
        ],
        "allowJs": true,
        "checkJs": false,
        "jsx": "react-jsx",
        "incremental": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "src/**/*",
        "**/*.ts",
        "**/*.tsx",
        "**/*.js",
        "**/*.jsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build",
        ".next",
        "coverage",
        "**/*.test.ts",
        "**/*.test.tsx",
        "**/*.spec.ts",
        "**/*.spec.tsx"
    ]
}